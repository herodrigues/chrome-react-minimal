{
  "name": "Chrome React Minimal",
  "version": "1.0.0",
  "description": "Chrome extension with React/Redux",
  "manifest_version": 2,
  "minimum_chrome_version": "27",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "match_about_blank": false,
      "all_frames": false,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "icon-48.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_title": "ChromeReact"
  }
}
